<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.subjects.PaperFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="6dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:id="@+id/backarrowId"
                android:src="@drawable/backward_arrow_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/centernameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Papers "
                android:textColor="@color/black"
                android:textSize="24sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginStart="80dp"
                android:layout_below="@+id/centernameId"/>
        </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="13dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="15dp"
                android:paddingStart="15dp">

                <TextView
                    android:id="@+id/lectureId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lectures"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:id="@+id/lectureViewId"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="2dp"
                    android:layout_below="@+id/lectureId"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimary" />

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favLectureId"
                android:src="@drawable/icon_more_sharp"
                android:layout_marginStart="5dp"
                android:paddingEnd="10dp"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="15dp"
                android:orientation="vertical"
                android:paddingStart="15dp">

                <TextView
                    android:id="@+id/handoutId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Handouts"
                    android:textColor="@color/grey1"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/handoutViewId"
                    android:layout_below="@+id/handoutId"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:background="@color/colorPrimary" />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favHandoutId"
                android:src="@drawable/icon_more_sharp"
                android:layout_marginStart="5dp"
                android:paddingEnd="10dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="15dp"
                android:orientation="vertical"
                android:paddingStart="15dp">

                <TextView
                    android:id="@+id/sectionId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sections"
                    android:textColor="@color/grey1"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/sectionViewId"

                    android:layout_below="@+id/sectionId"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"

                    android:background="@color/colorPrimary" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favSectionId"
                android:src="@drawable/icon_more_sharp"
                android:layout_marginStart="5dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="15dp"
                android:paddingStart="15dp">

                <TextView
                    android:id="@+id/courseId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Courses"
                    android:textColor="@color/grey1"
                    android:textSize="16sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:minWidth="100dp"
                    android:layout_height="2dp"
                    android:id="@+id/courseViewId"
                    android:layout_below="@+id/courseId"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:background="@color/colorPrimary" />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favCourseId"
                android:src="@drawable/icon_more_sharp"
                android:layout_marginStart="5dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="15dp"
                android:paddingStart="15dp">


                <TextView
                    android:id="@+id/revisionId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revisions"
                    android:textColor="@color/grey1"
                    android:textSize="16sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/revisionViewId"
                    android:layout_below="@+id/revisionId"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:background="@color/colorPrimary" />
            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favRevisionId"
                android:src="@drawable/icon_more_sharp"
                android:layout_marginStart="5dp"
                android:paddingEnd="10dp"
                android:layout_marginEnd="50dp"

                android:textColor="@color/black"
                />
        </LinearLayout>

    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/termRecyclerView"
        android:layout_marginTop="10dp"

        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emptyLayout"
            android:text="Nothing to show"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:visibility="gone"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/progress_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:alpha=".5"
        android:animateLayoutChanges="true"
        android:background="#8B94C4"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_drawable"
            android:indeterminateDuration="500"
            android:indeterminateTint="@color/colorPrimary"/>
    </FrameLayout>
</FrameLayout>